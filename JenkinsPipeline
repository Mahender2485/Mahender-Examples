pipeline {
    agent any {
        stages{
            stage('Checkout') {
                step{
                    checkout scm
                }
            }
            stage('Install Dependencies') {
                step{
                    sh 'npm install'
                }
            }
            stage('Run Tests') {
                step{
                    sh 'npm test'
                }
            }
        }
        post {
            always {
            junit 'test-results/*.xml'
            }
        }   
    }
}